{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "dist",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*", "custom.d.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
